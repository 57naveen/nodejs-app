<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Side Input Field</title>
    <link rel="stylesheet" href="/css/sideinput.css">
</head>
<body>
    <div class="container ">                
   <div class="side-input-module">
       
        <form action="/auth/sideinput" method="post">
        <div class="input-fields">
            <label for="Date">Date</label>
            <input type="date" id="Date" name="Date" required>
        </div>

        <div class="input-fields">
            <label for="ConsultantName">Consultant Name</label>
            <input type="text" id="ConsultantName" name="ConsultantName" placeholder="Consultant Name" required>
        </div>

        <div class="input-fields">
            <lable>Ticket Number</lable>
           <input type="number" placeholder="Ticket Number" name="TicketNumber" required>


        </div>


        <div class="input-fields">
            <lable>Type of Ticket</lable>
            <input type="text" id="TypeOfTicket" placeholder="Type of ticket" name="TypeOfTicket" required>

        </div>


        <div class="input-fields">
            <lable>Process / Document revison</lable>
            <input type="text" id="ProcessDocumentRevision" placeholder="Process / Document revison" name="ProcessDocumentRevision" required>

        </div>


        <div class="input-fields">
            <lable>Status</lable>
            <input type="text" id="Status" placeholder="Status" name="Status" required>

        </div>



        <div class="input-fields">
            <lable>From</lable>
            <input type="time" id="From" placeholder="From" name="From" required>

        </div>



        <div class="input-fields">
            <lable>To</lable>
            <input type="time" id="To" placeholder="To" name="To" required>

        </div>



        <div class="input-fields">
            <lable>Ticket Assigned Date</lable>
            <input type="date" id="TicketAssignedDate" placeholder="DD/MM/YYYY" name="TicketAssignedDate" required>

        </div>

        <div class="input-fields">
            <lable>Brief details of Ticket/Activities</lable>
             <!-- <textarea name="Brief details of Ticket" id="" cols="10" rows="5" name="data[Brief details of Ticket/Activities]"></textarea> -->
          <input type="text" id="BriefDetails" name="BriefDetails" required>
            
        </div>
        
        <div class="button-container">
    <button id="back-button">Back</button>
    <button id="submit-button">Submit</button>
     </div>
      
        </form>
       
    </div>

    <script>
        document.getElementById('back-button').addEventListener('click', function() {
      window.location.href = '/dash';
});

var sidebar = document.querySelector('.sidebar');

    // Get a reference to the button that toggles the sidebar
    var toggleButton = document.getElementById('toggleSidebarButton'); // You should add an ID to your button for this

    // Function to toggle the sidebar's visibility
    function toggleSidebar() {
        if (sidebar.style.display === 'none' || sidebar.style.display === '') {
            sidebar.style.display = 'block';
        } else {
            sidebar.style.display = 'none';
        }
    }

    // Add a click event listener to the button
    toggleButton.addEventListener('click', toggleSidebar);

    </script>

    </div>
</body>
</html>
