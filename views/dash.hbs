<body>
    
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="/images/profile1.png" alt="Logo">
                    <h2>eSoft<span class="danger">Labs</span></h2>  
                </div>
                <div class="close" id="close-btn">
                    <span class="material-icons-sharp">close</span>
                </div>
            </div>
            <div class="sidebar">
                <a href="dash" >
                    <span class="material-symbols-sharp">dashboard</span>
                    <h3>Dashboard</h3>
                </a>


       <a href="#" >
    <span class="material-symbols-sharp">person</span>
    <h3>Person</h3>
     
</a>


<ul>
    <li>
        <a href="#" class="task-btn">
            <span class="material-symbols-sharp">task</span>
            <h3>Task</h3>
            <div class="arrow">
                <span class="material-symbols-outlined first">arrow_drop_down</span>
            </div>
        </a>
        <ul class="task-dropdown" id="add-task-link">
            <li><a href="/sideinput">Add new task </a></li>
           <!-- <li><a href="#"></a></li> -->

        </ul>  
    </li>
</ul>

               <div class="log">
    <a href="#" class="logout">
        <span class="material-symbols-sharp logout">logout</span>
        <h3>Logout</h3>
    </a>
</div>
            </div>
        </aside>
        </nav>
       
        <main>
    <h1>Dashboard</h1>
     <form id="signin-form">
    <div class="insight">
        <div class="grid1">
            <div id="current-date"></div>
            <div id="current-day"></div>
            <div id="live-timer"></div>
            <div class="swipeup">swipe up</div>
            <button id="sign-in-button">Sign In</button>
            <button id="logout-button" style="display: none;">sign out</button>
        </div>
    </div>
</form>

</main>

        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-symbols-sharp">menu</span> 
                </button>
                <div class="theme-toggler">
                    <span class="material-symbols-sharp active" >light_mode</span>
                    <span class="material-symbols-sharp">dark_mode</span>
                </div>

    <div class="profile">
    <div class="info">
        <p class="user-greeting">Hey, <b id="user-name-placeholder">Loading...</b> <br> welcome</p>
        <small class="text-muted"></small>
       
